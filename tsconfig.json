{
    "compilerOptions": {
        "module": "commonjs",
        "outFile": "./dist/bundle.js",
        "removeComments": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "types": [
            "node"
        ],
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "files": [
        "src/index.ts"
    ],
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.test.ts"
    ]
}